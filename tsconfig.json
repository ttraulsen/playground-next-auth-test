{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["src/test/*"]
}
